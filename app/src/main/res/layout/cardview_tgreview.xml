<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#99103F8D"
    android:padding="0dp"
    app:cardCornerRadius="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <TextView
            android:id="@+id/tgcd_memname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="left|center"
            android:singleLine="true"
            android:text="會員暱稱"
            android:textColor="#F3F0DF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />


        <TextView
            android:id="@+id/tgcd_addTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="2019/10/10"
            android:textColor="#F3F0DF"
            app:layout_constraintEnd_toEndOf="@+id/tgcd_memname"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tgcd_state"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="報名狀態"
            android:textColor="#F3F0DF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tgcd_memname" />

        <TextView
            android:id="@+id/tgcd_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="性別"
            android:textColor="#F3F0DF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tgcd_state"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tgcd_memname"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tgcd_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F3F0DF"
            android:text="會員Email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>