<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pic_master_bg"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="即時客服"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/master_chat"
            app:layout_constraintTop_toBottomOf="@+id/master_chat" />

        <ImageView
            android:id="@+id/master_chat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="236dp"
            android:layout_marginBottom="112dp"
            android:background="@drawable/bg_border_green"
            android:padding="20dp"
            android:src="@drawable/icon_wm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mem_ItemContent"
            app:layout_constraintVertical_bias="0.173"
            tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/wm_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="2dp"
        android:padding="3dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/wm_img"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp">


        <TextView
            android:id="@+id/wm_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="管理員名稱"
            android:textColor="@color/white"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="259dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理員編號："
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/wm_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啟用日期："
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/wm_obd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理員信箱："
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/wm_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/masScanner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/bg_border_orange"
        android:padding="20dp"
        android:src="@drawable/mrent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mem_ItemContent"
        app:layout_constraintVertical_bias="0.173"
        tools:ignore="MissingConstraints" />

    <ImageView
            android:id="@+id/iMobileSign"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/bg_border_green"
            android:padding="20dp"
            android:src="@drawable/mfriend"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mem_ItemContent"
            app:layout_constraintVertical_bias="0.173"
            tools:ignore="MissingConstraints"
            android:visibility="gone"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="租借證掃描"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/masScanner"
        app:layout_constraintTop_toBottomOf="@+id/masScanner" />

        <Button
            android:id="@+id/btnlogout"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#4DBEB7B7"
            android:background="@drawable/bg_border_black"
            android:text="登出"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,OnClick" />


</androidx.constraintlayout.widget.ConstraintLayout>
