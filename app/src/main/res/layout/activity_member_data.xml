<?xml version="1.0" encoding="utf-8"?>




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_bg_mem"
    android:padding="5dp">

    <TextView
        android:id="@+id/memd_No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="會員編號:" />

    <TextView
        android:id="@+id/memd_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="暱稱:" />
    <TextView
        android:id="@+id/memd_Sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="性別:" />
    <TextView
        android:id="@+id/memd_Point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="點數:" />
    <TextView
        android:id="@+id/memd_Birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:inputType="date"
        android:text="生日:" />
    <TextView
        android:id="@+id/memd_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="手機:"
        android:textSize="20dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/memd_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="電子郵件:" />
    <Button
        android:id="@+id/memd_btnEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="修改資料"
        android:textColor="@color/white"
        android:background="@drawable/bg_border_black"
        android:backgroundTint="#4B009688"/>
    <LinearLayout
        android:id="@+id/editMemDataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#94000000"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="輸入新暱稱:"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/memd_edName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:maxLength="10"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="輸入新手機:"
            android:textColor="@color/white"/> />
        <EditText
            android:id="@+id/memd_edPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:maxLength="10"
            android:inputType="phone|number"
            android:digits="1234567890"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="輸入新密碼:"
            android:digits="1234567890"
            android:textColor="@color/white"/> />
        <EditText
            android:id="@+id/memd_edPSW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:maxLength="10"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/memd_Submit"
            android:layout_gravity="right"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="送出修改"
            android:textColor="@color/white"
            android:background="@drawable/bg_border_black"
            android:backgroundTint="#59FF0000"/>
    </LinearLayout>


</LinearLayout>

